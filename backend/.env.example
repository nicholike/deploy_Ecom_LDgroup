# Application
NODE_ENV=production
PORT=3000
API_PREFIX=/api/v1

# Database
DATABASE_URL="mysql://username:password@localhost:3306/mlm_ecommerce"

# JWT (⚠️ MUST CHANGE IN PRODUCTION - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))")
JWT_SECRET=CHANGE_THIS_IN_PRODUCTION_MINIMUM_32_CHARACTERS_USE_CRYPTO_RANDOM
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=CHANGE_THIS_IN_PRODUCTION_MINIMUM_32_CHARACTERS_DIFFERENT_FROM_JWT_SECRET
JWT_REFRESH_EXPIRES_IN=7d

# Redis (Bull Queue - Optional for Phase 1)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Payment Gateways (Setup later)
VNPAY_TMN_CODE=your_vnpay_tmn_code
VNPAY_HASH_SECRET=your_vnpay_hash_secret
VNPAY_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html

MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key

STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Email (Nodemailer - Setup later)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@mlm-ecommerce.com

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880

# Commission
COMMISSION_CALCULATION_DAY=1
DEFAULT_COMMISSION_RATE_F1=10
DEFAULT_COMMISSION_RATE_F2=7
DEFAULT_COMMISSION_RATE_F3=5
DEFAULT_COMMISSION_RATE_F4=3

# Security
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# CORS (⚠️ CHANGE to your production domain)
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# Payment - SePay (⚠️ REQUIRED for production)
SEPAY_API_KEY=your-sepay-api-key-here
BANK_ACCOUNT_NUMBER=your-bank-account-number
BANK_ACCOUNT_NAME=YOUR_BANK_ACCOUNT_NAME
BANK_CODE=BIDV
BANK_NAME=BIDV - Ngân hàng TMCP Đầu tư và Phát triển Việt Nam
